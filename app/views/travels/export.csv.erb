<%
headers = [ "User", "Data", "Destino", "Total"]

  headers1 = ["Tipo","Valor Custo"]

  csv_output = CSV.generate do |csv|
    csv << headers

      csv << [
        current_user.name,
        @travel.data.strftime("%d-%m-%Y"),
        @travel.destino,
        @total
      ]
  end

  csv_output2 = CSV.generate do |csv|
    csv << headers1

      @travel.costs.each do |cost|
      csv << [
        
          cost.tipo.description,
          cost.valor
        ]
      
    end
  end


%>

<%= csv_output.html_safe %>
<%= csv_output2.html_safe %>
<div id="centralize">

<h1>Travels</h1>

<table>
  <thead>
    <tr>
      <th>Destination</th>
      <th>Date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @travels.each do |travel| %>
      <tr>
        <td><%= travel.destino %></td>
        <td><%= travel.data.strftime("%d-%m-%Y") %></td>
        <td><%= current_user.name %></td>
        <td><%= link_to 'Show', travel %></td>
        <td><%= link_to 'Edit', edit_travel_path(travel) %></td>
        <td><%= link_to 'Destroy', travel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<tr>
<td><%= link_to 'New Travel', new_travel_path %></td>
  </tr>
</div>  
